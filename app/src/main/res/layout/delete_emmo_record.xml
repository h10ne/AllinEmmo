<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pink"
    android:theme="@style/MaterialAlertDialog_rounded">

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:text="Вы уверены, что хотите удалить запись?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/no_cross"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dialog_text"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text"
            app:srcCompat="@drawable/cross" />

        <ImageButton
            android:id="@+id/yes_bin"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/dialog_text"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text"
            app:srcCompat="@drawable/bin" />
</androidx.constraintlayout.widget.ConstraintLayout>